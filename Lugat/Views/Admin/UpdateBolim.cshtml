@using Lugat.Models.Foundations.Bolims
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Bolim

@{
    ViewData["Title"] = "Update Bolim";
}

<h2>Update Bolim</h2>
<form asp-action="UpdateBolim" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">Bo'lim Nomi</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="SectionPicture">Rasm</label>
        <input type="text" class="form-control" id="SectionPicture" name="SectionPicture" value="@Model.SectionPicture" required />
    </div>
    <div class="form-group">
        <label for="Star">Yulduz</label>
        <input type="number" class="form-control" id="Star" name="Star" value="@Model.Star" required />
    </div>
    <div class="form-group">
        <label for="CategoryId">Kategoriya</label>
        <select class="form-control" id="CategoryId" name="CategoryId">
            <option value="">Kategoriyani tanlang</option>
            <option value="@ViewData["CategoryId"]" selected>
                @ViewData["CategoryId"]
            </option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Yangilash</button>
</form>

