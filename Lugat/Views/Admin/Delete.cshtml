@using Lugat.Models.Foundations.Categories
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* General Reset */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .delete-container {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        dl {
            text-align: left;
            margin: 0 0 20px 0;
            padding: 0;
        }

        dt {
            font-weight: bold;
            color: #555;
        }

        dd {
            margin: 0 0 10px 0;
            color: #777;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            font-size: 14px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-danger {
            background-color: #e74c3c;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #c0392b;
            }

        .btn-secondary {
            background-color: #bdc3c7;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #95a5a6;
            }

        .delete-container hr {
            border: none;
            border-top: 1px solid #ddd;
            margin: 20px 0;
        }

        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #aaa;
        }
    </style>
</head>
<body>
    <div class="delete-container">
        <h4>Ushbu Kategoriyani o'chirasizmi</h4>    
        <hr />
        <dl>
            <dt>ID</dt>
            <dd>@Model.Id</dd>

            <dt>Name</dt>
            <dd>@Model.Name</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
