@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Lugat.Models.Foundations.Words
@model IEnumerable<Word>

<h2>@ViewData["Title"]</h2>

@if (Model.Any())
{
    <div class="table-container">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>English</th>
                    <th>English Translation</th>
                    <th>Uzbek</th>
                    <th>Example in English</th>
                    <th>Example in Uzbek</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var word in Model)
                {
                    <tr>
                        <td>@word.English</td>
                        <td>@word.EnglishTrans</td>
                        <td>@word.Uzbek</td>
                        <td>@word.ExampleEng</td>
                        <td>@word.ExampleUz</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No words available for this Bolim.</p>
}

<a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Orqaga</a>

<style>
    /* General container for the table */
    body {
        font-family: 'Times New Roman', Times, serif;
    }

    .table-container {
        margin: 20px auto;
        max-width: 1200px;
        overflow-x: auto;
        border-radius: 8px;
        background: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Modern table styling */
    .modern-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
        text-align: left;
        border-radius: 8px;
        overflow: hidden;
    }

        .modern-table thead {
            background-color: #007bff;
            color: #fff;
        }

        .modern-table th,
        .modern-table td {
            padding: 15px;
            border-bottom: 1px solid #ddd;
        }

        .modern-table tr:hover {
            background-color: #f1f1f1;
        }

        .modern-table th {
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

    /* Responsive design */
     (max-width: 768px) {
        .modern-table th, .modern-table td

    {
        padding: 10px;
    }

    }

    /* Primary button styling */
    .btn-primary {
        display: inline-block;
        margin: 20px 0;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        text-align: center;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
